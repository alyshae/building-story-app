<h1>BUILDING SHOW PAGE</h1>

<%= @building.name %><br />
<%= @building.address %><br />

<h3>STORIES:</h3><br />
<%= button_to "Add New Story", new_building_story_path(@building), method: "get", action: "new" %>

<% @stories.each do |s| %>
    <div>
      <%= s.title %><br />
      <%= s.description %><br />
      <% if is_owner?(s) %>
        <%= button_to "Edit Story", edit_building_story_path([@building, @story]), method: "get", action: "edit" %>
        <h4>Delete Button Goes Here</h4>
      <% end %>
    </div>
    <hr />
<% end %>
