<div class="row topper"></div>
<div id='edit-story' class='edit-story-container'>
  <%= form_for([@building, @story], method: "patch", action: "update", html: { class: 'form-horizontal col-sm-offset-2 col-sm-8 edit-story-f' } ) do |form| %>
  <div class='edit-story-form col-sm-offset-2 col-sm-8'>
    <div id="flash-entry">
      <% flash.each do |key, value| %>
      <div class='flash <%= key %>'><%= value %></div>
      <% end %>
    </div>
      <%= render partial: '/stories/form', object: form %>
      <%= form.hidden_field :user_id, :value => "#{current_user.id}" %>
      <%= form.hidden_field :building_id, :value => @building %>
      <%= form.hidden_field :id, :value => @story.id %>
      <%= form.submit "Submit Updates", class: 'btn btn-default sub' %>
      <%= link_to "Cancel", building_path(@building), class: 'btn btn-default back' %>
  </div>
  <% end %>
</div>
