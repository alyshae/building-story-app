<h1>New Story Form for <%= @building.name %></h1>

<%= form_for @story, url: building_stories_path(@building, @story), method: "post" do |f| %>
    <p>Title: <%= f.text_field :title %></p>
    <p>Description: <%= f.text_area :description %></p>
    <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
    <%= f.hidden_field :building_id, :value => @building.id %>
  <%= f.submit "Submit New Story" %>
<% end %>
