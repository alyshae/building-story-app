<h1>New Story Form for <%= @building.name %></h1>

<%= form_for @story, url: building_stories_path do |f| %>
    <p>Title: <%= f.text_field :title %></p>
    <p>Description: <%= f.text_area :description %></p>
  <!-- below adds "choose photo" button to our new story form -->
  <%= form_for @photo, url: new_building_story_path, html: { multipart: true } do |form| %>
    <%= form.file_field :img %>
  <% end %>
  <%= f.submit "Submit New Story" %>
<% end %>
