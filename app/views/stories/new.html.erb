
<div id='new-story' class='new-story-container'>

  <%= form_for(@story, url: building_stories_path(@building), method: "post", html: { class: 'form-horizontal col-sm-offset-2 col-sm-8 new-story-f' } ) do |form| %>
  <div class='new-story-form col-sm-offset-2 col-sm-8'>
    <h1><%= @building.name %></h1>
    <div id="flash-entry">
      <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>
      <%= render partial: '/stories/form', object: form %>
      <%= form.hidden_field :user_id, :value => "#{current_user.id}" %>
      <%= form.file_field :img, class: 'file-upload-field'%>
      <%= form.submit "Submit", class: 'btn btn-default sub'%>
      <%= link_to "Cancel", building_path(@building), class: 'btn btn-default back' %>
  </div>
  <% end %>
</div>
