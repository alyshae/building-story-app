<h1>SIGN-UP FORM PAGE</h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email, ex: email@domain.com", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password, must contain at least 3 characters", class: "form-control" %>
  </div>
    <%= f.submit "Sign-up", class: "btn btn-default" %>
<% end %>
